<%=form_for  @recipe  do |t|%>
<%=t.label :name %>
<%=t.text_field :name %>
<%= collection_check_boxes(:ingredints, :ingredients_ids, Ingredient.all, :id, :name) do |b| %>
    <li>
      <%= b.check_box %>
      <%= b.label %>
    </li>
<% end %>
<%= t.fields_for :ingredints, @recipe.ingredients.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>

<%=t.submit%>
<%end%>